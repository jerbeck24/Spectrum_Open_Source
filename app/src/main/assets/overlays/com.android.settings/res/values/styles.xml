<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SettingsBase" parent="@*android:style/Theme.Material.Settings">
        <!-- @android:color/background_dark for NO OVERLAP, @android:drawable/menuitem_background for OVERLAP -->
        <item name="android:windowBackground">@*android:drawable/menuitem_background</item>
        <item name="android:colorBackground">@android:color/background_dark</item>

        <!-- BG OF SUGGESTION CARD IN N WHEN TURNING OFF CELL DATA -->
        <item name="android:colorAccent">@android:color/holo_purple</item>

        <!-- Text in settings when turning off cell data or on hotspot or something similar -->
        <item name="android:textColorPrimaryInverse">@*android:color/Teal_700</item>
    </style>

    <style name="Theme.ActionBar" parent="@*android:style/Widget.Material.ActionBar.Solid" />

    <style name="Theme.AlertDialog" parent="@*android:style/Theme.Material.Dialog.Alert">
        <item name="android:textColorPrimary">@*android:color/Teal_700</item>
        <item name="android:textColorSecondary">#ffdddddd</item>
        <item name="android:colorBackground">@android:color/holo_purple</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="android:colorAccent">@*android:color/Teal_700</item>
    </style>

    <style name="TextAppearance.CategoryTitle" parent="@*android:style/Theme.Material">
        <item name="android:textColor">@*android:color/Teal_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18.0sp</item>
    </style>

    <style name="SecurityPreferenceButtonContainer" parent="@*android:style/Widget.Material.SegmentedButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2.0</item>
        <item name="android:dividerPadding">8.0dip</item>
    </style>
    <style name="SecurityPreferenceButton" parent="@*android:style/Widget.Material.Button.Borderless">
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material">
        <item name="android:windowBackground">@android:color/background_dark</item>
    </style>
    <style name="FallbackHome" parent="@*android:style/Theme.DeviceDefault" />
    <style name="PreferenceFragmentListSinglePane" parent="@*android:style/PreferenceFragmentList">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@android:color/background_dark</item>
    </style>

    <style name="Theme.SettingsAlertDialog" parent="@*android:style/Theme.Material.Dialog.Alert" />
    <style name="Theme.DateTimeSettingsSetupWizard" parent="@*android:style/Theme.Material.NoActionBar" />
    <style name="Theme.SettingsDialog" parent="@*android:style/Theme.Material.Dialog.NoActionBar" />
    <style name="Theme.SettingsLicenseActivity" parent="@*android:style/Theme.Material.Panel" />
    <style name="Theme.AppPicker" parent="@*android:style/Theme.Material.Dialog" />




</resources>
